{
  "name": "@yozora/react-code-highlighter",
  "version": "1.0.0-alpha.19",
  "description": "highlight markdown code in react",
  "author": {
    "name": "guanghechen",
    "url": "https://github.com/guanghechen/"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yozorajs/yozora-react.git",
    "directory": "packages/code-highlighter"
  },
  "homepage": "https://github.com/yozorajs/yozora-react/tree/main/packages/code-highlighter#readme",
  "keywords": [
    "mdast node renderer",
    "markdown code highlighter"
  ],
  "main": "lib/cjs/index.js",
  "types": "lib/types/index.d.ts",
  "source": "src/index.ts",
  "license": "MIT",
  "engines": {
    "node": ">= 14.15.0"
  },
  "files": [
    "lib/",
    "!lib/**/*.js.map",
    "!lib/**/*.d.ts.map",
    "package.json",
    "CHANGELOG.md",
    "LICENSE",
    "README.md"
  ],
  "scripts": {
    "build": "cross-env NODE_ENV=production rollup -c ../../rollup.config.js",
    "prebuild": "rimraf lib/ && tsc -p tsconfig.src.json --emitDeclarationOnly",
    "prepublishOnly": "cross-env ROLLUP_SHOULD_SOURCEMAP=false yarn build",
    "test": "cross-env TS_NODE_FILES=true jest --config ../../jest.config.js --rootDir ."
  },
  "peerDependencies": {
    "clsx": "^1.1.1",
    "prop-types": "^15.7.2",
    "react": "^17.0.1",
    "styled-components": "^5.3.0"
  },
  "dependencies": {
    "prism-react-renderer": "^1.2.1",
    "prismjs": "^1.24.1"
  },
  "browserslist": [
    "last 2 versions",
    "Firefox ESR",
    "> 1%",
    "ie >= 11"
  ]
}
