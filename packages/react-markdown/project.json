{
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "name": "react-markdown",
  "sourceRoot": "packages/react-markdown/src",
  "projectType": "library",
  "tags": [],
  "targets": {
    "clean": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "packages/react-markdown",
        "parallel": false,
        "commands": ["rimraf lib"]
      }
    },
    "build": {
      "executor": "nx:run-commands",
      "dependsOn": ["clean", "^build"],
      "options": {
        "cwd": "packages/react-markdown",
        "parallel": false,
        "commands": ["rollup -c ../../rollup.config.mjs"],
        "env": {
          "NODE_ENV": "production",
          "ROLLUP_SHOULD_SOURCEMAP": "true"
        }
      },
      "configurations": {
        "production": {
          "env": {
            "NODE_ENV": "production",
            "ROLLUP_SHOULD_SOURCEMAP": "false"
          }
        }
      }
    },
    "watch": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "packages/react-markdown",
        "parallel": false,
        "commands": ["rollup -c ../../rollup.config.mjs -w"],
        "env": {
          "NODE_ENV": "development",
          "ROLLUP_SHOULD_SOURCEMAP": "true"
        }
      }
    }
  }
}
